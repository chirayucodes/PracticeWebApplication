@model PracticeWebApplication.Data.StudentDetails

<form asp-action="Create" method="post" class="row g-3">

    <div class="col-md-6">
        <label asp-for="StudentName" class="form-label"></label>
        <input asp-for="StudentName" class="form-control" />
        <span asp-validation-for="StudentName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="FatherName" class="form-label"></label>
        <input asp-for="FatherName" class="form-control" />
        <span asp-validation-for="FatherName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="MotherName" class="form-label"></label>
        <input asp-for="MotherName" class="form-control" />
        <span asp-validation-for="MotherName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Gender" class="form-label d-block"></label>

        <div class="form-check form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" value="M" />
            <label class="form-check-label">Male</label>
        </div>

        <div class="form-check form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" value="F" />
            <label class="form-check-label">Female</label>
        </div>

        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Address" class="form-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
